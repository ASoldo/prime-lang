module demos::input;

import core::types;

fn prompt_age() -> Result[int32, string] {
  in[int32]("Enter age: ")
}

fn prompt_temperature(label: string) -> Result[string, string] {
  in[string](`Temperature for {label}: `)
}

fn main() {
  match prompt_age() {
    Result::Ok(age) => out(`age is {age}`),
    Result::Err(err) => out(`We have error: {err}`),
  }
}
