//! Time helpers demo.
//!
//! Uses `now_ms()` and `sleep_ms(ms)` to measure a small delay.
module demos::time_demo;

import core::types;

/// Prints timestamps before/after sleeping.
fn main() {
  let int64 start = now_ms();
  out(`start ms: {start}`);
  sleep_ms(5);

  let int64 end = now_ms();
  out(`end ms: {end}`);
  out(`delta >= 0 ? {end - start >= 0}`);
}
